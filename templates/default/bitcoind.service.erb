[Unit]
Description=Bitcoin daemon
After=network.target

[Service]
User=<%= @user %>
Group=<%= @user %>

Type=forking
PIDFile=<%= @conf_dir %>/bitcoind.pid
ExecStart=<%= @bitcoind %> -daemon -pid=<%= @conf_dir %>/bitcoind.pid

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=5s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
